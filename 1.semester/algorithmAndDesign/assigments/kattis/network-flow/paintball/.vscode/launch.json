    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/program.exe",
            "args": [
                // "data/paintball-sample-1.in"
                // "data/paintball-sample-2.in"
                // "data/sample3.in",
                // "data/sample4.in",
                // "data/sample5.in",
                "data/sample6.in",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "${defaultBuildTask}"
        }
    ]
}